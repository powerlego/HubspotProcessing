<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="HubspotProcessing">
    <Appenders>
        <RollingFile name="RollingFile" filename="logs/processing.log"
                     filePattern="logs/$${date:yyyy-MM}/processing-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c [%n%m%n%ex]%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <ThresholdFilter level="INFO"/>
        </RollingFile>
        <File name="FileDebug" filename="logs/processing-debug.log" append="false">
            <PatternLayout>
                <Pattern>%d %p %c [%n%m%n%ex]%n</Pattern>
            </PatternLayout>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%p %c{2} %m%n"/>
            <ThresholdFilter level="INFO"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.hubspot" level="DEBUG" additivity="false">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="FileDebug"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>